<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="3dp"
    android:paddingEnd="3dp"
    android:paddingRight="10dp"
    tools:context=".followpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="81dp"
            android:layout_height="64dp"
            android:backgroundTint="#FFFFFF"
            android:padding="0dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="279dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/solomon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="36dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="John Doe"
                android:textAlignment="viewStart"
                android:textColor="#2699FB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/followbtn"
                android:layout_width="5dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#2699FB"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Follow"
                android:textSize="16sp"
                app:cornerRadius="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginBottom="35dp"
                android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Aut iure expedita enim, fugiat neque ratione autem necess"
                android:textAlignment="center"
                android:textColor="#2699FB"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Aut iure expedita enim, fugiat neque ratione autem necessitatibus rem accusamus tempora, ut obcaecati vero accusantium dolorum laudantium? Natus possimus error obcaecati ipsam quidem. Eius officiis culpa harum quos eos minima unde sequi, nemo, ratione optio ipsa et praesentium nisi nesciunt voluptas?"
                android:textColor="#2699FB" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>